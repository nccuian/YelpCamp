<% include ../partials/header %>

<div class="container">
    <h1 class="form-header">Create a New Campground</h1>
    <div class="form-box">
         <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="new camp" name="campground[name]" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="image url" name="campground[image]" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" placeholder="description" name="campground[description]" required></textarea>
            </div>
            <div class="form-group">
                <button class="form-control btn index-camp-btn">Submit</button>
            </div>
        </form>   
        <a class="form-back-btn" href="/campgrounds"><i class="fas fa-chevron-left"></i> Go Back</a> 
    </div>
</div>

<% include ../partials/footer %>