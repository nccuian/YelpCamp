<% include ../partials/header %>

<div class="container">
    <h1 class="form-header">Edit <%=campground.name%></h1>
    <div class="form-box">
         <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" value="<%=campground.stars%>" name="campground[stars]" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="campground[description]" required><%=campground.description%></textarea>
            </div>
            <div class="form-group">
                <button class="form-control btn index-camp-btn">Edit</button>
            </div>
        </form>   
        <a class="form-back-btn" href="/campgrounds/<%=campground._id%>"><i class="fas fa-chevron-left"></i> Go Back</a> 
    </div>
</div>

<% include ../partials/footer %>