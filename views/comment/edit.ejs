<% include ../partials/header %>

<div class="container">
    <h1 class="form-header">Edit Comment</h1>
    <div class="form-box">
         <form action="/campgrounds/<%=campground_id%>/comment/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=comment.content%>" name="comment[content]" required>
            </div>
            <div class="form-group">
                <button class="form-control btn index-camp-btn">Submit</button>
            </div>
        </form>   
        <a class="form-back-btn" href="/campgrounds/<%=campground_id%>"><i class="fas fa-chevron-left"></i> Go Back</a> 
    </div>
</div>

<% include ../partials/footer %>